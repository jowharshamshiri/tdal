{
	"name": "tdal",
	"version": "0.1.1",
	"description": "Typescript Data Access Layer for SQLite",
	"author": {
		"name": "Bahram Shamshiri",
		"email": "jowharshamshiri@gmail.com"
	},
	"license": "MIT",
	"funding": {
		"type": "ko-fi",
		"url": "https://ko-fi.com/jowharshamshiri"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jowharshamshiri/tdal.git"
	},
	"keywords": [
		"orm",
		"sqlite",
		"database",
		"sql",
		"query"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"lint": "eslint --ext .ts,.tsx src/",
		"test": "jest",
		"test:watch": "jest --watch",
		"format": "prettier --write \"src/**/*.ts\"",
		"generate": "tsx src/database/generator/entity-generator.ts generate"
	},
	"dependencies": {
		"ajv-formats": "^3.0.1",
		"axios": "^1.8.3",
		"better-sqlite3": "^8.7.0",
		"chai": "^5.2.0",
		"chokidar": "^4.0.3",
		"compression": "^1.8.0",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"glob": "^11.0.1",
		"helmet": "^8.0.0",
		"inquirer": "^12.5.0",
		"js-yaml": "^4.1.0",
		"jsonpath": "^1.1.1",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"ms": "^2.1.3",
		"open": "^10.1.0",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@babel/plugin-transform-optional-chaining": "^7.25.9",
		"@types/better-sqlite3": "^7.6.4",
		"@types/chai": "^5.2.0",
		"@types/chokidar": "^1.7.5",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/js-yaml": "^4.0.9",
		"@types/jsonpath": "^0.2.4",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/morgan": "^1.9.9",
		"@types/node": "^18.16.18",
		"@types/open": "^6.1.0",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"@typescript-eslint/parser": "^5.59.11",
		"autoprefixer": "^10.4.20",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^29.7.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"ts-jest": "^29.2.6",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3",
		"typescript": "^4.9.5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --ignore-path ./.gitignore --write "
		],
		"*.{js,ts,cjs,mjs}": [
			"eslint --fix"
		]
	},
	"type": "module"
}
